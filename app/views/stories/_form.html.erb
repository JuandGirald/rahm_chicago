<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <%= simple_form_for(@story) do |f| %>
        <%= render 'shared/error_messages', object: f.object%>
        <div class="row">
          <div class="col-xs-12">
            <div class="field">
              <%= f.input :first_name, required: false%>
            </div>  
          </div>
        </div>
        <div class="field">
          <%= f.input :last_name, required: false %>
        </div>
        <div class="field">
          <%= f.input :street_address, required: false %>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="field">
              <%= f.input :city, required: false %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="field">
              <%= f.input :state, required: false %><br>
            </div>
          </div>
        </div>
        <div class="field">
          <%= f.input :email, as: :email, required: false %>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="field">
              <%= f.input :zip, required: false %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="field">
              <%= f.input :telephone %>
            </div>    
          </div>
        </div>
        <div class="field">
          <%= f.input :story_body, as: :text, rows: 10, required: false %>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :image %>
          </div>
        </div>
         <div class="field">
          <%= f.input :video_link %>
        </div>
        <div class="actions">
          <%= f.button :submit, 'Create', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</div>
